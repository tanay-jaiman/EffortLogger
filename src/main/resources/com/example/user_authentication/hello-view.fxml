<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="404.0" prefWidth="426.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.user_authentication.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="PLANNING POKER">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label text="Enter Username:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="username_input" promptText="Username">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </TextField>
      <Label text="Enter Password:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <PasswordField fx:id="password_input" promptText="Password">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </PasswordField>
      <Button fx:id="submit_button" mnemonicParsing="false" onAction="#onSubmitButtonClick" text="SUBMIT">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="authentication_text">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
</VBox>
